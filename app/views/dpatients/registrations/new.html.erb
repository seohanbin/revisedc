<h2>Sign up (patient)</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "이메일" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "비밀번호" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "비밀번호 확인" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
  	<%= f.label :name, "이름" %><br />
  	<%= f.text_field :name %>
  </div>

  <div class="field">
  	<%= f.label :nickname, "닉네임" %><br />
  	<%= f.text_field :nickname %>
  </div>

  <div class="field">
  	<%= f.label :phonenum, "전화번호" %><br />
  	<%= f.text_field :phonenum %>
  </div>

  <div class="field">
  	<%= f.label :gender, "성별" %><br />
    <label><%= f.radio_button :gender, 2 %> 여성 </label> <br>
    <label><%= f.radio_button :gender, 1 %> 남성</label>
  </div>

  <div class="field">
  	<%= f.label :birth, "생년월일" %><br />
  	<%= f.date_field :birth %>
  </div>

  <div class="field">
  	<%= f.label :agreement, "약관동의(필수)" %><br />
  	<%= f.check_box :agreement %>
  </div>

  <div class="field">
  	<%= f.label :pmhistory, "주요 전신/치과 병력" %><br />
  	<%= f.text_area :pmhistory %>
  </div>

  <div class="field">
  	<%= f.label :careerjob, "직업" %><br />
  	<%= f.text_field :careerjob %>
  </div>

  <div class="field">
  	<%= f.label :location, "실거주 지역" %><br />
  	<%= f.text_field :location %>
  </div>



  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "dpatients/shared/links" %>
