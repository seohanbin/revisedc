<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "이메일" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "비밀번호" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "비밀번호 확인" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "현재 비밀번호" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="field">
  	<%= f.label :name, "이름" %><br />
  	<%= f.text_field :name %>
  </div>

  <div class="field">
  	<%= f.label :nickname, "닉네임" %><br />
  	<%= f.text_field :nickname %>
  </div>

  <div class="field">
  	<%= f.label :phonenum, "전화번호" %><br />
  	<%= f.text_field :phonenum %>
  </div>

  <div class="field">
  	<%= f.label :gender, "성별" %><br />
    <label><%= f.radio_button :gender, 2 %> 여성 </label> <br>
    <label><%= f.radio_button :gender, 1 %> 남성</label>
  </div>

  <div class="field">
  	<%= f.label :birth, "생년월일" %><br />
  	<%= f.date_field :birth %>
  </div>

  <div class="field">
  	<%= f.label :agreement, "약관동의(필수)" %><br />
  	<%= f.check_box :agreement %>
  </div>

  <div class="field">
  	<%= f.label :university, "학교" %><br />
  	<%= f.text_field :university %>
  </div>

  <div class="field">
  	<%= f.label :studentid, "학번" %><br />
  	<%= f.text_field :studentid %>
  </div>




  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
